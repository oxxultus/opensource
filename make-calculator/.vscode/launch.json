{
    "version": "0.2.0",
    "configurations": [
        // ------------------ 1. 정적 빌드 디버그 설정 ------------------
        {
            "name": "(GDB) 1. Launch Static App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/static_calculater_app",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build_static", 

            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}", // 프로젝트 루트에서 실행
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        // ------------------ 2. 공유 빌드 디버그 설정 ------------------
        {
            "name": "(GDB) 2. Launch Shared App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/shared_calculater_app",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build_shared", 
            
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                // 런타임에 .so 파일을 찾도록 LD_LIBRARY_PATH 환경 변수 설정
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/build/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        // ------------------ 3. 동적 빌드 디버그 설정 (dlopen 사용 가정) ------------------
        {
            "name": "(GDB) 3. Launch Dynamic App (dlopen)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/dynamic_calculater_app",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build_dynamic", 
            
            "args": [],
            "stopAtEntry": true,
            // dlopen()의 상대 경로 문제 우회를 위해 실행 디렉토리를 build/lib로 변경
            "cwd": "${workspaceFolder}/build/lib", 
            "environment": [
                // LD_LIBRARY_PATH 설정
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/build/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
